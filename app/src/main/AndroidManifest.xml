<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="[http://schemas.android.com/apk/res/android](http://schemas.android.com/apk/res/android)"
    package="it.lorenzo.clw">

    <!-- Berechtigungen -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Conky"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"> <!-- WICHTIG für Android 10 Zugriff -->

        <!-- Hauptaktivität (Jetzt ohne Launcher Icon) -->
        <activity
            android:name=".gui.MainActivity"
            android:label="Conky"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- LAUNCHER KATEGORIE WURDE ENTFERNT -->
            </intent-filter>
        </activity>

        <activity
            android:name=".gui.ExampleSelector"
            android:label="@string/title_activity_exampleselector"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".chooser.FileSelect"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_file_select"
            android:theme="@style/AppTheme.Dialog" />

        <activity
            android:name=".chooser.FileChooser"
            android:label="@string/title_activity_file_chooser"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Der Widget Provider -->
        <receiver android:name=".widget.MyWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="it.lorenzo.clw.intent.action.CHANGE_PICTURE" />
                <action android:name="it.lorenzo.clw.intent.action.SETTINGS_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/demo_widget_provider" />
        </receiver>
        
        <!-- Der neue Update-Service -->
        <service android:name=".widget.CLWService" />

    </application>

</manifest>
